<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#00BCD4"
    android:orientation="vertical"
    tools:context=".SignInScreen">

    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="340dp"
        android:backgroundTint="#FC9FDEF4"
        android:gravity="center|right"
        android:hint="כתובת אימייל"
        android:inputType="textEmailAddress"
        android:textSize="22sp" />


    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="430dp"
        android:backgroundTint="#FC9FDEF4"
        android:gravity="center|right"
        android:hint="סיסמא"
        android:inputType="textPassword"
        android:textSize="22sp"
        android:visibility="visible" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonSignIn"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="245dp"
        android:layout_height="80dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="540dp"
        android:backgroundTint="#5192ac"
        android:gravity="center"
        android:text="כניסה"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:cornerRadius="25dp"
        app:spinning_bar_color="#468da7" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="640dp"
        android:gravity="center"
        android:linksClickable="false"
        android:text="אם אין ברשותך משתמש, לחץ כאן"
        android:textColor="#059893"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="215dp"
        android:layout_height="215dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/car_parking_croped" />

</RelativeLayout>