<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#7DBED8"
    android:orientation="vertical"
    tools:context=".SignUpScreen">

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_marginStart="220dp"
        android:layout_marginTop="85dp"
        android:text="הדרך שלך לחניה"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textTitleTwo"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_marginStart="220dp"
        android:layout_marginTop="115dp"
        android:text="מתחילה כאן!"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/car_parking_croped" />

    <androidx.cardview.widget.CardView
        android:layout_width="500dp"
        android:layout_height="525dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="210dp"
        android:layout_marginRight="20dp"
        app:cardCornerRadius="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editEmail"
                android:layout_width="330dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#FC9FDEF4"
                android:ems="10"
                android:gravity="center|right"
                android:hint="כתובת אימייל"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/editPassword"
                android:layout_width="330dp"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="#FC9FDEF4"
                android:ems="10"
                android:gravity="center|right"
                android:hint="סיסמא"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/editFirstName"
                android:layout_width="330dp"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="#FC9FDEF4"
                android:ems="10"
                android:gravity="center|right"
                android:hint="שם פרטי"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/editLastName"
                android:layout_width="330dp"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="#FC9FDEF4"
                android:ems="10"
                android:gravity="center|right"
                android:hint="שם משפחה"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/editPhone"
                android:layout_width="330dp"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="#FC9FDEF4"
                android:ems="10"
                android:gravity="center|right"
                android:hint="טלפון נייד"
                android:inputType="phone" />

            <EditText
                android:id="@+id/editUserName"
                android:layout_width="330dp"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="#FC9FDEF4"
                android:ems="10"
                android:gravity="center|right"
                android:hint="שם משתמש"
                android:inputType="textPersonName" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonSignUp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="245dp"
                android:layout_height="80dp"
                android:layout_marginStart="52dp"
                android:layout_marginTop="25dp"
                android:backgroundTint="#5192ac"
                android:gravity="center"
                android:text="להרשמה"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                app:cornerRadius="25dp"
                app:spinning_bar_color="#468da7" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
